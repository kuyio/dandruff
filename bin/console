# frozen_string_literal: true

require 'bundler/setup'
require 'dandruff'

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

puts "Dandruff Ruby Console"
puts "======================="
puts

# Example usage
dirty_html = '<script>alert("xss")</script><p class="safe">Safe content</p>'
dandruff = Dandruff.new
clean_html = dandruff.sanitize(dirty_html)

puts "Original: #{dirty_html}"
puts "Clean:    #{clean_html}"
puts

# Test with configuration
configured_dandruff = Dandruff.new(allowed_tags: ['p'], allowed_attributes: [])
configured_clean = configured_dandruff.sanitize(dirty_html)
puts "With config: #{configured_clean}"
